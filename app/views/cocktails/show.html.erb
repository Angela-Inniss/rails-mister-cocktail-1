<h2>Details</h2>
<h3><%= @cocktail.name %></h3>

<div class="cocktail-photo">
  <% if @cocktail.photo? %>
    <% picture_path = "http://res.cloudinary.com/dqonjhrsw/image/upload/" + @cocktail.photo.path %>
  <% else %>
    <% picture_path = @cocktail.picture %>
  <% end %>

  <%= image_tag(picture_path, width: 250, height: 250) %>
</div>

<div class="cocktail-ingredients">
  <% @cocktail.doses.each do |dose| %>
    <p>
      <%= dose.ingredient.name %> : <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </p>
    <% end %>
</div>

<div class="all-btns">
  <%= link_to "See all", cocktails_path, class: "btn btn-light" %>

  <%= link_to "Edit", edit_cocktail_path(@cocktail), class: "btn btn-light" %>

  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-light" %>
</div>

